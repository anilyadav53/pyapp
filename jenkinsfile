pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/anilyadav53/pyapp.git'
            }
        }

        stage('Build and Push Docker Image') {
            steps {
                script {
                    def imageName = "anilyadav53/pyapp:latest"

                    // Build Docker image
                    docker.build(imageName)

                    // Login to Docker Hub
                    withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', usernameVariable: 'DOCKER_HUB_USER', passwordVariable: 'DOCKER_HUB_PASSWORD')]) {
                        sh "echo $DOCKER_HUB_PASSWORD | docker login -u $DOCKER_HUB_USER --password-stdin"
                    }

                    // Push Docker image
                    docker.image(imageName).push()
                }
            }
        }

        stage('Deploy Container') {
            steps {
                script {
                    // Stop & remove the old container if running
                    sh """
                        docker stop pyapp || true
                        docker rm pyapp || true
                    """

                    // Run the new container
                    sh 'docker run -d --name pyapp -p 5000:5000 anilyadav53/pyapp:latest'
                }
            }
        }
    }
}
