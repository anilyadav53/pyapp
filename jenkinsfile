pipeline {
    agent any

    environment {
        IMAGE_NAME = "anilyadav53/pyapp:latest"
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/anilyadav53/pyapp.git'
            }
        }

        stage('Build and Push Docker Image') {
            steps {
                script {
                    // Build Docker Image
                    docker.build(IMAGE_NAME)

                    // Login to Docker Hub
                    withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', 
                        usernameVariable: 'DOCKER_HUB_USER', 
                        passwordVariable: 'DOCKER_HUB_PASSWORD')]) {
                        sh "echo $DOCKER_HUB_PASSWORD | docker login -u $DOCKER_HUB_USER --password-stdin"
                    }

                    // Push Image to Docker Hub
                    docker.image(IMAGE_NAME).push()
                }
            }
        }

        stage('Run Container') {
            steps {
                script {
                    // Stop & remove old container if running
                    sh 'docker stop pyapp || true'
                    sh 'docker rm pyapp || true'
                    
                    // Pull latest image
                    sh 'docker pull anilyadav53/pyapp:latest'
                    
                    // Run new container on port 5000
                    sh 'docker run -d --name pyapp -p 5000:5000 anilyadav53/pyapp:latest'
                    
                    // Verify running container
                    sh 'docker ps'
                }
            }
        }
    }
}
